# Configuration pour la synchronisation NAS
# Copiez ce fichier vers .env et adaptez les valeurs

# Dossiers source (un par ligne, numérotés)
# Ajoutez autant de SOURCE_X que nécessaire
SOURCE_1="/path/to/source1"
SOURCE_2="/path/to/source2"
# SOURCE_3="/path/to/source3"

# Hôte NAS (utilisateur@hostname ou ip)
# Exemple: "user@nas.example.com" ou "user@192.168.1.100"
NAS_HOST="user@nas.example.com"

# Répertoire de destination sur le NAS
# Exemple: "/volume1/backup/" ou "/share/documents/"
DESTINATION="/volume1/backup/"

# Options rsync supplémentaires (optionnel)
# Exemple: "--delete --exclude='*.tmp'" 
RSYNC_EXTRA_OPTS=""

# Nombre maximum de tentatives en cas d'échec
MAX_ATTEMPTS=3