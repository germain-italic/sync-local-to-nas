# NAS synchronization configuration
# Copy this file to .env and adapt the values

# Source folders (one per line, numbered)
# Add as many SOURCE_X as needed
SOURCE_1="/path/to/source1"
SOURCE_2="/path/to/source2"
# SOURCE_3="/path/to/source3"

# NAS host (user@hostname or ip)
# Example: "user@nas.example.com" or "user@192.168.1.100"
NAS_HOST="user@nas.example.com"

# Destination directory on NAS
# Example: "/volume1/backup/" or "/share/documents/"
DESTINATION="/volume1/backup/"

# Additional rsync options (optional)
# Example: "--delete --exclude='*.tmp'" 
RSYNC_EXTRA_OPTS=""

# Use checksums instead of date/size (true/false)
# Recommended for torrents but slower
USE_CHECKSUM=true

# Maximum number of attempts on failure
MAX_ATTEMPTS=3